extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/auth.css")

block content
    main 
        if errorMessage
            .user-message.user-message--error #{errorMessage}
        form.login-form(action="/signup", method="POST")
            .form-control
                label(for="email") E-mail
                input#email(class=`${validationErrors.find(err => err.param === 'email') ? 'invalid': ''}`, type="email", name="email" value=oldInput.email)   
            .form-control
                label(for="password") Password
                input#password(class=`${validationErrors.find(err => err.param === 'password') ? 'invalid': ''}`,type="password", name="password" value=oldInput.password)
            .form-control
                label(for="password") Confirm Password
                input#confirmPassword(class=`${validationErrors.find(err => err.param === 'confirmPassword') ? 'invalid': ''}`,type="password", name="confirmPassword" value=oldInput.confirmPassword)
            input(type="hidden", name="_csrf", value=csrfToken)
            button.btn(type="submit") Sign Up


